<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme_Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:colorPrimaryDark">#191919</item>
        <item name="android:navigationBarColor">#191919</item>

        <item name="template_fontColor">@android:color/white</item>
        <item name="template_backgroundColor">#363636</item>
    </style>

    <style name="AppTheme_Light" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:colorPrimaryDark">#BBBBBB</item>
        <item name="android:navigationBarColor">#BBBBBB</item>

        <item name="template_fontColor">@android:color/black</item>
        <item name="template_backgroundColor">@android:color/white</item>
    </style>

    <style name="AppTheme_Dark_Red" parent="AppTheme_Dark">
        <item name="colorPrimary">#F44336</item>
        <item name="android:colorPrimary">#F44336</item>
        <item name="android:colorPrimaryDark">#D32F2F</item>
        <item name="android:colorAccent">#FF5252</item>
        <item name="android:navigationBarColor">#D32F2F</item>

        <item name="template_backgroundColor">#D32F2F</item>
    </style>

    <style name="AppTheme_Light_Red" parent="AppTheme_Light">
        <item name="colorPrimary">#F44336</item>
        <item name="android:colorPrimary">#F44336</item>
        <item name="android:colorPrimaryDark">#D32F2F</item>
        <item name="android:colorAccent">#FF5252</item>
        <item name="android:navigationBarColor">#D32F2F</item>

        <item name="template_backgroundColor">#F44336</item>
    </style>
</resources>